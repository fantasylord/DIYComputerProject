                        <a class="btn btn-default" href="#">Link 1</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-default" href="#">Link 2</a>
                    </li>*@

                <!-- Dropdown -->
                @*<li class="nav-item dropdown">
                        <a class="btn btn-default dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
