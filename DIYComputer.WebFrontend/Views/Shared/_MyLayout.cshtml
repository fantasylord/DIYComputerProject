            return serviceconfig;
        }
        var isLogin = "@{
                @if (User != null && User.Claims.Where(o => o.Type == "UserType").Count() > 0 && User.Claims.Where(o => o.Type == "Name").Count() > 0)
                {
                  <text>OK</text>


                }
            }";
        function checkLogin() {

            if (isLogin == "OK")
                return true;
            return false;
        }

