            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HDSuitable" class="control-label"></label>
                <input asp-for="HDSuitable" class="form-control" />
                <span asp-validation-for="HDSuitable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HDInterface" class="control-label"></label>
                <input asp-for="HDInterface" class="form-control" />
                <span asp-validation-for="HDInterface" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HDRotateSpeed" class="control-label"></label>
                <input asp-for="HDRotateSpeed" class="form-control" />
                <span asp-validation-for="HDRotateSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HDCache" class="control-label"></label>
                <input asp-for="HDCache" class="form-control" />
                <span asp-validation-for="HDCache" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HDCapacity" class="control-label"></label>
                <input asp-for="HDCapacity" class="form-control" />
                <span asp-validation-for="HDCapacity" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imgurl" class="control-label"></label>
                <input asp-for="Imgurl" class="form-control" />
                <span asp-validation-for="Imgurl" class="text-danger"></span>
            </div>
