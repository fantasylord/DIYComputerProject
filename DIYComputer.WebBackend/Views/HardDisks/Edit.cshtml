@model DIYComputer.Entity.ComputerWareEntity.HardDisk

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_IMLayout.cshtml";
}

<h2>Edit</h2>

<h4>HardDisk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
