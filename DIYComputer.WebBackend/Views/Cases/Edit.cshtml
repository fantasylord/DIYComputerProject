            <div class="form-group">
                <label asp-for="CaseStyle" class="control-label"></label>
                <select asp-for="CaseStyle" class="form-control chosen-select-no-results" asp-items="ViewBag.EnumCaseStyle"></select>

                <span asp-validation-for="CaseStyle" class="text-danger"></span>
