                <span asp-validation-for="CaseFunction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaseType" class="control-label"></label>
                <select asp-for="CaseType" class="form-control chosen-select-no-results" asp-items="ViewBag.EnumCaseType"></select>

                <span asp-validation-for="CaseType" class="text-danger"></span>
            </div>
            <div class="form-group">
