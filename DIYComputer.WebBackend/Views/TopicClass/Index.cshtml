@model IEnumerable<DIYComputer.Entity.SysEntity.TopicClass>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_IMLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentNode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentNode.Id)
            </td>
            <td>
                <a class="btn btn-info btn-xs" asp-action="Edit" asp-route-id="@item.Id">编辑</a> |
                <a class="btn btn-success btn-xs" asp-action="Details" asp-route-id="@item.Id">详情</a> |
                <a class="btn btn-warning btn-xs" asp-action="Delete" asp-route-id="@item.Id">删除</a>
            </td>
        </tr>
}
    </tbody>
</table>
