@model IEnumerable<DIYComputer.Entity.ComputerWareEntity.Display>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_IMLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisplaySize)
            </th>
   

            <th>
                @Html.DisplayNameFor(model => model.DisplayUseWay)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DisplayBackLED)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayBoard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayVisualAngle)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DisplayDpi)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DisplayRatio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Imgurl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisplaySize)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.DisplayUseWay)
            </td>
      
            <td>
                @Html.DisplayFor(modelItem => item.DisplayBackLED)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayBoard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayVisualAngle)
            </td>
  
            <td>
                @Html.DisplayFor(modelItem => item.DisplayDpi)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DisplayRatio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
 
            <td>
                @Html.DisplayFor(modelItem => item.Imgurl)
            </td>
            <td>
                <a class="btn btn-info btn-xs" asp-action="Details" asp-route-id="@item.ID">详情</a> |
                <a class="btn btn-success btn-xs" asp-action="Edit" asp-route-id="@item.ID">编辑</a> |
                <a class="btn btn-warning btn-xs" asp-action="Delete" asp-route-id="@item.ID">删除</a>
            </td>
        </tr>
}
    </tbody>
</table>
